#include <NsCore/DynamicCast.h>


namespace Noesis
{

////////////////////////////////////////////////////////////////////////////////////////////////////
template<class T>
inline T* ResourceDictionary::Get(const char* key) const
{
    BaseComponent* value = Get(key);
    NS_CHECK(value == 0 || DynamicCast<T*>(value) != 0, "Invalid cast");
    return static_cast<T*>(value);
}

}
