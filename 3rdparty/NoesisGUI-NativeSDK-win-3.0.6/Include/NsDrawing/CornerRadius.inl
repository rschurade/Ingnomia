////////////////////////////////////////////////////////////////////////////////////////////////////
inline CornerRadius::CornerRadius(float radius): topLeft(radius), topRight(radius),
    bottomRight(radius), bottomLeft(radius)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
inline CornerRadius::CornerRadius(float tl, float tr, float br, float bl): topLeft(tl),
    topRight(tr), bottomRight(br), bottomLeft(bl)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
inline bool CornerRadius::operator==(const CornerRadius& cornerRadius) const
{
    return topLeft == cornerRadius.topLeft &&
           topRight == cornerRadius.topRight &&
           bottomRight == cornerRadius.bottomRight &&
           bottomLeft == cornerRadius.bottomLeft;
}

////////////////////////////////////////////////////////////////////////////////////////////////////
inline bool CornerRadius::operator!=(const CornerRadius& cornerRadius) const
{
    return !(*this == cornerRadius);
}

}
